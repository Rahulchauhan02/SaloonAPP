<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.SaloonDetailActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/back_button"
        android:layout_gravity="start"
        android:layout_width="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        />
</androidx.appcompat.widget.Toolbar>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:layout_height="wrap_content">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <TextView
                  android:id="@+id/saloon_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/_25sdp"
                  android:elevation="@dimen/_20sdp"
                  android:ellipsize="end"
                  android:fontFamily="@font/alata"
                  android:maxWidth="@dimen/_300sdp"
                  android:maxLines="1"
                  android:text="New Hair Saloon"
                  android:textColor="@color/black"
                  android:textSize="@dimen/_20sdp"
                  android:textStyle="bold"
                  tools:ignore="HardcodedText" />

              <TextView
                  android:id="@+id/saloon_address"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/saloon_name"
                  android:layout_marginStart="@dimen/_25sdp"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:elevation="@dimen/_20sdp"
                  android:ellipsize="end"
                  android:fontFamily="@font/alata"
                  android:maxWidth="@dimen/_300sdp"
                  android:maxLines="1"
                  android:text="saloon Address"
                  android:textStyle="bold"
                  tools:ignore="HardcodedText" />

              <ImageView
                  android:layout_width="@dimen/_25sdp"
                  android:layout_height="@dimen/_25sdp"
                  android:src="@drawable/ic_baseline_location_on_24"
                  android:layout_toRightOf="@+id/saloon_address"
                  android:layout_below="@+id/saloon_name"
                  android:layout_marginTop="@dimen/_8sdp"/>

               <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                app:cardBackgroundColor="#008745"
                app:cardCornerRadius="@dimen/_5sdp"
                   android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="4.6"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    />
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_star_24"
                    />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

          </RelativeLayout>

          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <androidx.viewpager2.widget.ViewPager2
                  android:id="@+id/detail_viewpager"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_160sdp"
                  android:background="@drawable/ic_launcher_background"
                  android:orientation="horizontal" />

              <me.relex.circleindicator.CircleIndicator3
                  android:id="@+id/detail_indicator"
                  android:layout_width="match_parent"
                  android:layout_marginBottom="@dimen/_10sdp"
                  app:ci_drawable="@color/white"
                  app:ci_drawable_unselected="@color/black"
                  android:layout_height="wrap_content"
                  android:layout_gravity="bottom" />
          </FrameLayout>
    <LinearLayout
              android:orientation="horizontal"
              android:layout_marginTop="@dimen/_10sdp"
              android:layout_width="wrap_content"
              android:layout_marginLeft="@dimen/_25sdp"
              android:layout_height="wrap_content">
              <com.google.android.material.switchmaterial.SwitchMaterial

                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:checked="false"
                  android:text="Female"
                  tools:ignore="UseSwitchCompatOrMaterialXml" />
                <com.google.android.material.switchmaterial.SwitchMaterial
                  android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_10sdp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:checked="false"
                  android:text="Male"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />
               </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommended"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp"
                android:fontFamily="@font/alata"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                />


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recommend_List"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>




        </LinearLayout>



      </LinearLayout>


  </ScrollView>

  </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_8sdp"
        android:id="@+id/browse_item"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_background"
        android:layout_marginBottom="@dimen/_25sdp"
        android:drawableEnd="@drawable/ic_baseline_list_alt_24"
        android:text="Browse Item"

        android:textColor="@color/white"
       />


</RelativeLayout>